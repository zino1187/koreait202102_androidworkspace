    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="중동지역 자이툰 부대 의무봉사대로 활동" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="그린피스 환경단체 3년간 활동" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
